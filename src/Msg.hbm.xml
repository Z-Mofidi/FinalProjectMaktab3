<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="ChatClasses.Msg" table="msg">
      <meta attribute="class-description">
         This class contains the user detail. 
      </meta>
      <id name="idMsg" type="int" column="idmsg">
         <generator class="native"/>
      </id>
      <property name="msg" column="msgText" type="string"/>
      <property name="chatGroupName" column="chatGroup_nameChatGroup" type="string"/>
      <property name="user" column="user_userName" type="string"/>
      
   </class>
</hibernate-mapping>